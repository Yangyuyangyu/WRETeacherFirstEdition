<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/syllabus_btn_bg_green"
        >

        <ImageButton
            android:id="@+id/persondata_imgbtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/translucent_background"
            android:src="@drawable/app_w_back_but_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="个人资料"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_size" />

        <TextView
            android:id="@+id/persondata_tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确认"
            android:padding="10dp"
            android:textColor="@drawable/right_tv_bg"
            android:textSize="@dimen/small_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/persondata_rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_marginTop="5dp">

        <com.wr_education.view.RoundImageView
            android:id="@+id/persondata_img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击修改头像"
            style="@style/Textview_Medium_Size"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="手机号码"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/medium_size"/>
            <TextView
                android:id="@+id/persondata_tv_phone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:minHeight="40dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_size"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="姓名"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/medium_size"/>
            <com.wr_education.view.ClearEditText
                android:id="@+id/persondata_et_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入您的姓名"
                android:maxLength="20"
                android:singleLine="true"
                android:textColorHint="@color/gray_hint"
                android:textSize="@dimen/medium_size"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="性别"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/medium_size"/>
            <TextView
                android:id="@+id/persondata_tv_sex"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:minHeight="40dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_size"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="出生日期"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/medium_size"/>
            <TextView
                android:id="@+id/persondata_tv_birthdate"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:minHeight="40dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_size"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"

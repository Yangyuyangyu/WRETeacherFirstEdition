        <TextView
            android:id="@+id/aboutus_tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright 2014-2016 学美版权所有"
            android:textColor="@color/gray_hint"
            android:textSize="@dimen/small_size_more"
            android:layout_below="@+id/aboutus_tv_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/aboutus_tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四川成都美学科技有限公司"
            android:textColor="@color/gray_hint"
            android:textSize="@dimen/small_size_more"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/aboutus_tv_copyright"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
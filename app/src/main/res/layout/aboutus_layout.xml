<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/syllabus_btn_bg_green"
        android:paddingRight="10dp">

        <ImageButton
            android:id="@+id/aboutus_imgbtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:background="@color/translucent_background"
            android:src="@drawable/app_w_back_but_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="关于我们"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/aboutus_img_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/aboutusimg"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/aboutus_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="围绕教育老师客户端"
                android:textColor="@color/black"
                android:textSize="@dimen/small_size"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/aboutus_img_head"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本:3.1.0"
                android:textColor="@color/gray_hint"
                android:textSize="@dimen/small_size_more"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/aboutus_tv_name"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            />

        <RelativeLayout
            android:id="@+id/aboutus_rl_callme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_while_tv_bg"
            >
            <TextView
                android:id="@+id/aboutus_tv_kefurexian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="客服热线:"
                android:textSize="@dimen/small_size"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/aboutus_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="400-88-22"
                android:textSize="@dimen/small_size"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/aboutus_tv_kefurexian"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/hsjt"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <WebView
            android:id="@+id/aboutus_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

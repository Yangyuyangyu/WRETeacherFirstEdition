<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <RelativeLayout
        android:id="@+id/syllabus_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/syllabus_btn_bg_green">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/syllabus_rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/syllabus_btn_bg_green"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/syllabus_tv_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="上一周"
                android:textColor="@drawable/right_tv_bg"
                android:textSize="@dimen/small_size"
                />

            <TextView
                android:id="@+id/syllabus_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="课程表(本周)"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size" />

            <TextView
                android:id="@+id/syllabus_tv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="下一周"
                android:textColor="@drawable/right_tv_bg"
                android:textSize="@dimen/small_size"
                />
            <!--<ImageView-->
                <!--android:id="@+id/syllabus_img_find"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:background="@mipmap/shalou" />-->

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/syllabus_ll_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible" >

            <ProgressBar
                android:id="@+id/pb_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/progress_anim"
                android:indeterminateOnly="true" />

            <TextView
                android:id="@+id/tx_progress_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="加载中..."
                android:textColor="@color/black"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/syllabus_btn_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="周一"
                android:textSize="@dimen/small_size"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@drawable/syllabus_tv_bg"
                android:background="@drawable/syllabus_tv_bottom"
                />
            <Button
                android:id="@+id/syllabus_btn_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="周二"
                android:textSize="@dimen/small_size"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@drawable/syllabus_tv_bg"
                android:background="@drawable/syllabus_tv_bottom"
                />
            <Button
                android:id="@+id/syllabus_btn_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="周三"
                android:textSize="@dimen/small_size"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@drawable/syllabus_tv_bg"
                android:background="@drawable/syllabus_tv_bottom"
                />
            <Button
                android:id="@+id/syllabus_btn_four"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="周四"
                android:textSize="@dimen/small_size"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@drawable/syllabus_tv_bg"
                android:background="@drawable/syllabus_tv_bottom"
                />
            <Button
                android:id="@+id/syllabus_btn_five"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="周五"
                android:textSize="@dimen/small_size"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@drawable/syllabus_tv_bg"
                android:background="@drawable/syllabus_tv_bottom"
                />
            <Button
                android:id="@+id/syllabus_btn_six"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="周六"
                android:textSize="@dimen/small_size"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@drawable/syllabus_tv_bg"
                android:background="@drawable/syllabus_tv_bottom"
                />

            <Button
                android:id="@+id/syllabus_btn_seven"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="周日"
                android:textSize="@dimen/small_size"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@drawable/syllabus_tv_bg"
                android:background="@drawable/syllabus_tv_bottom"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.wr_education.view.XListView
                android:id="@+id/syllabus_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="#00000000"
                android:scrollbars="none"
                />
            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/syllabus_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"/>
        </RelativeLayout>

    </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
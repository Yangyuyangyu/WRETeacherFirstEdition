<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/organizationlistadapter_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_while_tv_bg"
        android:padding="15dp"
        >
        <ImageView
            android:id="@+id/organizationlistadapter_image_head"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
             />

        <TextView
            android:id="@+id/organizationlistadapter_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/organizationlistadapter_image_head"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/organizationlistadapter_image_head"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_size" />

        <ImageView
            android:id="@+id/organizationlistadapter_image_person"
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:background="@mipmap/person_ico"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/organizationlistadapter_tv_name"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/organizationlistadapter_tv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_hint"
            android:textSize="@dimen/small_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/organizationlistadapter_image_person"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/organizationlistadapter_image_location"
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:background="@mipmap/site_ico"
            android:layout_alignBottom="@+id/organizationlistadapter_image_head"
            android:layout_alignLeft="@+id/organizationlistadapter_image_person"
            />

        <TextView
            android:id="@+id/organizationlistadapter_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_hint"
            android:textSize="@dimen/small_size"
            android:layout_alignBottom="@+id/organizationlistadapter_image_location"
            android:layout_alignLeft="@+id/organizationlistadapter_tv_teacher"
            android:ellipsize="end"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/organizationlistadapter_img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/audit_ico"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        android:layout_below="@+id/organizationlistadapter_rl"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/studentadapter_rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:background="@drawable/app_while_tv_bg">
        <TextView
            android:id="@+id/studentadapter_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Textview_Medium_Size"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/studentadapter_img_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/hsjt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/studentadapter_tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Textview_Medium_Size"
            android:layout_toLeftOf="@+id/studentadapter_img_jiantou"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background"/>
</LinearLayout>
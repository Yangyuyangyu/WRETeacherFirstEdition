<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">

        <ImageButton
            android:id="@+id/findpassworld_imgbtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/translucent_background"
            android:padding="10dp"
            android:src="@drawable/app_w_back_but_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/findpassworld_rl_username"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/findpassworld_img_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/loginusername" />
            </RelativeLayout>

            <EditText
                android:id="@+id/findpassworld_et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/findpassworld_rl_username"
                android:background="@drawable/login_et_bg"
                android:hint="请输入您的手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:minHeight="40dp"
                android:paddingLeft="10dp"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_hint"
                android:textSize="@dimen/medium_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/findpassworld_rl_verificationcode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/findpassworld_img_verificationcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/registeryzm" />
            </RelativeLayout>

            <EditText
                android:id="@+id/findpassworld_et_verificationcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/findpassworld_btn_time"
                android:layout_toRightOf="@id/findpassworld_rl_verificationcode"
                android:background="@drawable/login_et_bg"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:maxLength="6"
                android:minHeight="40dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:phoneNumber="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_hint"
                android:textSize="@dimen/medium_size" />

            <com.wr_education.view.TimeButton
                android:id="@+id/findpassworld_btn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_login_button_background"
                android:minHeight="35dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/findpassworld_rl_passworld"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/findpassworld_img_passworld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/registerpassworld" />
            </RelativeLayout>


            <EditText
                android:id="@+id/findpassworld_et_passworld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/findpassworld_rl_passworld"
                android:background="@drawable/login_et_bg"
                android:hint="请输入您的新密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:minHeight="40dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_hint"
                android:textSize="@dimen/medium_size" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/findpassworld_rl_passworldtwo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/findpassworld_img_passworldtwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/registerpassworld" />
            </RelativeLayout>

            <EditText
                android:id="@+id/findpassworld_et_passworldtwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/findpassworld_rl_passworldtwo"
                android:background="@drawable/login_et_bg"
                android:hint="请确认您的新密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:minHeight="40dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_hint"
                android:textSize="@dimen/medium_size" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/findpassworld_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_login_button_background"
            android:minHeight="40dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_size" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messdetailslistadapter_rl_item"
    android:layout_width="match_parent"
    android:background="@drawable/app_while_tv_bg"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/messdetailslistadapter_img_head"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/messdetailslistadapter_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/small_size"
        android:layout_alignTop="@+id/messdetailslistadapter_img_head"
        android:layout_toRightOf="@+id/messdetailslistadapter_img_head"
        android:layout_marginLeft="15dp"
         />

    <TextView
        android:id="@+id/messdetailslistadapter_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/small_size"
        android:layout_alignBottom="@+id/messdetailslistadapter_img_head"
        android:layout_alignLeft="@+id/messdetailslistadapter_tv_name"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/hsjt"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/messdetailslistadapter_img_head"
        />
</RelativeLayout>
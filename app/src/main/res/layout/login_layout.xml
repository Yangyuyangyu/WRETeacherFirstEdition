<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">

        <ImageButton
            android:id="@+id/login_imgbtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@color/translucent_background"
            android:src="@drawable/app_w_back_but_selector" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textSize="@dimen/medium_size"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_ll_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/login_rl_username"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/login_img_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/loginusername"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/login_et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/login_rl_username"
                android:layout_centerVertical="true"
                android:background="@drawable/login_et_bg"
                android:textSize="@dimen/medium_size"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_hint"
                android:hint="请输入您的手机号"
                android:paddingLeft="10dp"
                android:maxLength="11"
                android:phoneNumber="true"
                android:singleLine="true"
                android:inputType="phone"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/background"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_ll_passworld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/login_rl_passworld"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/login_img_passworld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/loginpassworld"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/login_et_passworld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/login_rl_passworld"
                android:layout_centerVertical="true"
                android:background="@drawable/login_et_bg"
                android:textSize="@dimen/medium_size"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_hint"
                android:hint="请输入密码"
                android:paddingLeft="10dp"
                android:maxLength="18"
                android:singleLine="true"
                android:inputType="textPassword"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp">
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_centerHorizontal="true"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_size"
        android:background="@drawable/shape_login_button_background"
        />
    </RelativeLayout>
</LinearLayout>
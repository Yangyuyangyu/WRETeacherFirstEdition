<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >


    <ScrollView
        android:id="@+id/mine_sl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/syllabus_btn_bg_green"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">


        <RelativeLayout
            android:id="@+id/mine_rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/syllabus_btn_bg_green"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="我"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size" />
            <RelativeLayout
                android:id="@+id/mine_img_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:id="@+id/mine_imageview"
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                     />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            >
            <com.wr_education.view.RoundImageView
                android:id="@+id/mine_img_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:id="@+id/mine_ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mine_img_head"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/mine_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_size"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/mine_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/medium_size"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/mine_rl_ziliao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/app_while_tv_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >
                <ImageView
                    android:id="@+id/mine_img_ziliao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ziliao"/>
                <TextView
                    android:id="@+id/mine_tv_ziliao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_img_ziliao"
                    android:layout_toLeftOf="@+id/mine_img_ziliaojiantou"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:text="个人资料"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_size"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/mine_img_ziliaojiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"
                />
            <RelativeLayout
                android:id="@+id/mine_rl_education"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/app_while_tv_bg"
                android:paddingBottom="5dp"
                >
                <ImageView
                    android:id="@+id/mine_img_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/jingli"/>
                <TextView
                    android:id="@+id/mine_tv_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_img_education"
                    android:layout_toLeftOf="@+id/mine_img_educationjiantou"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="教育经历"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_size"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/mine_img_educationjiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"
                />
            <RelativeLayout
                android:id="@+id/mine_rl_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/app_while_tv_bg"
                android:paddingBottom="5dp"
                >
                <ImageView
                    android:id="@+id/mine_img_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/chengguofenxiang"/>
                <TextView
                    android:id="@+id/mine_tv_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_img_share"
                    android:layout_toLeftOf="@+id/mine_img_sharejiantou"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:text="成果分享"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/medium_size"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/mine_img_sharejiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_ll_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/app_while_tv_bg">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/mine_img_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/shezhi"/>
                <TextView
                    android:id="@+id/mine_tv_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_img_setting"
                    android:layout_toLeftOf="@+id/mine_img_settingjiantou"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:text="设置"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/medium_size"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/mine_img_settingjiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
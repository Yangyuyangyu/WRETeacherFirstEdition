<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true">
        <shape>
            <gradient
                android:endColor="@color/app_while_but_pass_color"
                android:startColor="@color/app_while_but_pass_color" />
//  #3ba3cf
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape>
            <gradient
                android:endColor="@color/app_while_but_pass_color"
                android:startColor="@color/app_while_but_pass_color"/>

            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/green"
                android:startColor="@color/green"  />

            <corners
                android:radius="10dp" />

        </shape>
    </item>
</selector>
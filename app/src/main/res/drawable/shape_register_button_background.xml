<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <shape>
            <gradient android:angle="270" android:startColor="@color/app_while_but_pass_color" android:endColor="@color/app_while_but_pass_color"/>
            <corners android:radius="5dp"/>
            <stroke android:color="@color/syllabus_btn_bg_green" android:width="1dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:startColor="@color/app_while_but_pass_color" android:endColor="@color/app_while_but_pass_color"/>
            <corners android:radius="5dp"/>
            <stroke android:color="@color/syllabus_btn_bg_green" android:width="1dp"/>
        </shape>
    </item>

    <item >
        <shape>
            <corners android:radius="5dp"/>
            <stroke android:color="@color/syllabus_btn_bg_green" android:width="1dp"/>
            <gradient android:angle="270" android:startColor="@color/white" android:endColor="@color/white"/>
        </shape>
    </item>
</selector>
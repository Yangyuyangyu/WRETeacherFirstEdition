<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
	<item 
	    android:state_selected="true"> 
	    <shape> 
	        <gradient 
	            android:endColor="@color/app_while_but_pass_color"
	            android:startColor="@color/app_while_but_pass_color" />
	            
			<corners
			    android:radius="5dp" />
		</shape> 
	</item> 
    <item 
        android:state_pressed="true"> 
        <shape> 
            <gradient 
                android:endColor="@color/app_while_but_pass_color"
                android:startColor="@color/app_while_but_pass_color"/>
                
            <corners
                android:radius="5dp" />
    	</shape> 
   	</item> 
    <item> 
	    <shape> 
	        <gradient 
	            android:angle="270"
	            android:endColor="@color/syllabus_btn_bg_green"
	            android:startColor="@color/syllabus_btn_bg_green"  />
	            
          <corners
                android:radius="5dp" />
  		</shape>
 	</item> 
</selector> 